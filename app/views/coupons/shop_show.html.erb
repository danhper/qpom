<% content_for :headers do %>
    <%= stylesheet_link_tag "register_page" %>
    <%= javascript_include_tag 'shop_administration' %>
<% end %>

<div class="confirm_coupon">
  <h1><%= t 'coupon.description_long' %></h1>
<table width="80%" border="0">
  <tr>
    <td><%= cl_image_tag @coupon.image, width: 150, height: 150, crop: :scale %></td>
    <td class="coupon_details">
        <%= t('coupon.name') + ':' + @coupon.name %> <br />
        <%= t('coupon.description') + ':' + @coupon.description %> <br />
        <%= t('coupon.validity') + ':' + validity_time(@coupon) %> <br />
        <%= t('coupon.target') + ':' + @coupon.target unless @coupon.target.nil? %>
    <span class="button big"><%= t 'coupon.stop' %></span></td>
  </tr>
</table>
<table class="userlist">
  <caption><%= t 'coupon.users' %></caption>
  <tr>
    <th scope="col"><%= t 'coupon.code' %></th>
    <th scope="col"><%= t 'coupon.usage_number' %></th>
    <th scope="col"><%= t 'user.registration_date' %></th>
    <th scope="col"><%= t 'user.stared_shops_number' %></th>
  </tr>
  <% @coupon.users.each do |user| %>
    <%= render partial: "users/user_details_small", locals: { coupon: @coupon, user: user } %>
  <% end %>
</table>
</div>