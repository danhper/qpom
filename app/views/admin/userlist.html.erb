<div id="left-pane">
	<%= render 'shared/admin_menu' %>
</div>
<div id="right-pane" class="clearfix">
	<table>
		<thead>
			<tr>
				<th class="type-string">ユーザー名</th>
				<th class="type-int">クーポン受信数</th>
				<th class="type-int">使用数</th>
				<th class="type-int">シェア回数</th>
				<th class="type-int">マイ店登録数</th>
				<th>志向属性</th>
				<th class="type-string">ユーザー属性</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.name %></td>
					<td><%= user.received_coupon_number %></td>
					<td><%= user.used_coupon_number %></td>
					<td><%= user.shared_coupon_number %></td>
					<td><%= user.registered_my_mise_number %></td>
					<td>
						<% user.favorite_attribute.each do |attr| %>
							<%= attr %>
						<% end %>
					</td>
					<td>
						<% user.user_attribute.each do |attr| %>
							<%= attr %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

