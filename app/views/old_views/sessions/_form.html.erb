<%= form_tag sessions_path, :method => :post do %>
<div>
    <%= label_tag :username %>
    <br>
    <%= text_field_tag :username  %>
</div>
<div>
    <%= label_tag :password %>
    <br>
    <%= password_field_tag :password %>
</div>
<div>
    <%= submit_tag t('buttons.login'), :class => %w[button medium] %>
</div>
<% end %>